version: '3.8'

services:
  jdupdate:
    build: .
    container_name: jdupdate
    restart: unless-stopped
    ports:
      - "8080:8080"
    environment:
      # 青龙面板配置（必填）
      - QL_HOST=http://your-qinglong-host:5789  # 请修改为你的青龙面板地址
      - CLIENT_ID=your_client_id_here           # 请修改为你的 Client ID
      - CLIENT_SECRET=your_client_secret_here   # 请修改为你的 Client Secret

      # 可选配置
      - MAX_DAILY_ACCESS=7                           # 每IP每日最大访问次数，默认为7
      - BACKGROUND_IMAGE_URL=https://t.alcy.cc/ycy  # 背景图URL，默认为随机图片
    # 可选：挂载数据卷以持久化数据
    # volumes:
    #   - ./logs:/app/logs